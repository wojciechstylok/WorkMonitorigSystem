<Window x:Class="WorkMonitorigSystem.WorkDescription"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkMonitorigSystem"
        mc:Ignorable="d"
        Title="Work Monitoring System | Work Resume" Height="250" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Content="Opisz wykonaną pracę (numery tasków w Jira)" HorizontalContentAlignment="Center" Grid.Row="0" Background="LightGreen" />
        <TextBox x:Name="Description" Grid.Row="1" Background="LightGray" />
        <Label Name="Send" Content="Zatwierdź" HorizontalContentAlignment="Center" Grid.Row="2" Background="Green" MouseDown="Send_MouseDown" Foreground="White" />
    </Grid>
</Window>
